DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gommath
SESSION_SECRET=change-this-to-a-long-random-secret
GOOGLE_CLIENT_ID=160808232856-3c351j191uocqiailplgha2pnf2qtdam.apps.googleusercontent.com
# true면 DB 초기화를 건너뛰고 서버 실행(수동 xbot UI 용도)
SKIP_DB=false

# X 수동 보조 패널 AI 초안 (현재 글 분석+입력)
# 1) OpenAI 사용 시
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
# 2) OpenAI 키 없이 로컬 Ollama 사용 시 (둘 중 하나만 써도 됨)
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=qwen2.5:3b-instruct

# X auto-reply bot
# Read token: token that can call recent search
X_READ_BEARER_TOKEN=
# Write token: user-context token with write permission (if omitted, read token is reused)
X_WRITE_BEARER_TOKEN=
# Your bot's user id (to avoid replying to your own posts)
X_BOT_USER_ID=
# Example: "@your_handle -is:retweet -is:reply"
X_SEARCH_QUERY=
# Default safety trigger: only reply when this phrase appears in the post text
X_REQUIRED_TRIGGER=#replyme
# Supports placeholders: {post_id}, {author_id}
X_REPLY_TEMPLATE=문의 주셔서 감사합니다. 자세히 확인해볼게요.
# Start in dry-run mode first
X_DRY_RUN=true
# true: run once and exit / false: keep polling
X_RUN_ONCE=true
X_POLL_INTERVAL_MS=60000
X_MAX_RESULTS=10
X_MAX_REPLIES_PER_CYCLE=3

# X engagement assistant (human approval workflow)
# scan/list/approve/reject 명령에서 사용
X_ENGAGEMENT_STATE_FILE=data/x-engagement-assistant.json
X_FOLLOWING_PAGE_SIZE=200
X_FOLLOWING_MAX_PAGES=5
X_FOLLOWING_REFRESH_HOURS=12
X_FOLLOWING_SAMPLE_SIZE=20
X_TWEETS_PER_USER=2
X_MAX_CANDIDATES_PER_SCAN=20
X_MAX_SEEN_POST_IDS=10000
X_MAX_CANDIDATE_HISTORY=2000
X_MAX_POST_AGE_HOURS=72
# 기본값: 리트윗/답글 제외
X_INCLUDE_REPLIES=false
X_INCLUDE_RETWEETS=false
# true면 이미지/영상이 포함된 글만 후보 생성
X_REQUIRE_MEDIA=false
# approve 시 좋아요도 같이 실행할지
X_AUTO_LIKE_ON_APPROVE=true
# 승인 간 최소 대기 시간(초). 0이면 쿨다운 비활성화
X_APPROVE_COOLDOWN_SECONDS=45
# 승인 댓글 앞/뒤 문구(선택)
X_REPLY_PREFIX=
X_REPLY_SUFFIX=
